//*********************************************/
//**           Prisma Schema File             */
//*  This is your main schema file.           */
//* We directly include some binary targets   */
//*      aswell as some preview features.     */
//*********************************************/

generator client {
  provider        = "prisma-client-js"
  binaryTargets   = ["native", "debian-openssl-3.0.x", "linux-musl"]
  previewFeatures = ["multiSchema", "metrics", "queryCompiler", "driverAdapters"]
  output = "../client"
  //moduleFormat = "esm"
}

//* to migrate changes please use bunx prisma migrate dev

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL") // Add your database URL here
  directUrl = env("DIRECT_URL") // Add your direct URL here (optional) Remove if not needed
  schemas = ["public"] // Add your additional schemas here
}
